# https://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 80

[*.py]
max_line_length = 88

[*.html]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 88

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
